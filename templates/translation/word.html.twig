{% extends "base.html.twig" %}

{% block title %}
    {{ word.dutch }}
{% endblock %}

{% block metadescription %}
    <meta name="description"
          content="Bekijk hier de vertaling van {{ word.dutch }} in het Duits, Frans, Engels, Spaans en Italiaans.">
{% endblock %}

{% block body %}

    <h1>{{ word.dutch|capitalize }}</h1>

    <div class="row mb-3">
        <div class="col-md-8">
            <p>Bekijk de vertaling van {{ word.dutch }} hier:</p>

            <ul>
                <li>{{ word.dutch|capitalize }} in het
                    <a href="{{ path('translation_by_slug_in_specific_language', {'language': 'duits', 'slug': word.slug }) }}">
                        Duits
                    </a> {{ word.german }}</li>
                <li>{{ word.dutch|capitalize }} in het
                    <a href="{{ path('translation_by_slug_in_specific_language', {'language': 'engels', 'slug': word.slug }) }}">
                        Engels
                    </a> {{ word.english }}</li>
                <li>{{ word.dutch|capitalize }} in het
                    <a href="{{ path('translation_by_slug_in_specific_language', {'language': 'frans', 'slug': word.slug }) }}">
                        Frans
                    </a> {{ word.french }}</li>
                <li>{{ word.dutch|capitalize }} in het
                    <a href="{{ path('translation_by_slug_in_specific_language', {'language': 'spaans', 'slug': word.slug }) }}">
                        Spaans
                    </a> {{ word.spanish }}</li>
                <li>{{ word.dutch|capitalize }} is {{ word.italian }} in het
                    <a href="{{ path('translation_by_slug_in_specific_language', {'language': 'italiaans', 'slug': word.slug }) }}">
                        Italiaans
                    </a></li>
            </ul>

        </div>

    </div>

    <aside>
        <div class="row mb-3">
            {% include 'translation/category_words_partial.html.twig' with {'category':word.category} only %}
        </div>
    </aside>

{% endblock %}