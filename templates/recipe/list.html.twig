{% extends "base.html.twig" %}

{% block title %}
    Recepten
{% endblock %}

{% block body %}

    <div class="row mb-3">
        <div class="col-md-12">
            <h1>Recepten</h1>
            <p>Een verzameling recepten die uit kookboeken komen.</p>
        </div>

        {% for set in recipes|batch(recipes|length/3) %}
            <div class="col-md-4">
                <ul class="no-list">
                    {% for recipe in set %}
                        <li>
                            <a href="{{ path('recipe', {slug: recipe.slug}) }}">{{ recipe.title }}</a>
                        </li>
                    {% endfor %}
                </ul>
            </div>
        {% endfor %}

        <ul>

        </ul>

    </div>

{% endblock %}
