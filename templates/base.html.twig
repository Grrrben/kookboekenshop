<!doctype html>
<html lang="en">
    <head>
        <!-- Required meta tags -->
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
        <!-- font -->
        <!-- Bootstrap CSS -->
        <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
        <link rel="stylesheet" href="/css/base.css">

        <title>{% block title %}Kookboekenshop{% endblock %}</title>
        {% block stylesheets %}{% endblock %}

    </head>
    <body>
        <header>

            <div class="container">
                <div class="row mb-3">
                    <div class="col-md-4">
                        <div id="logo">
                            <a href="/">Kookboekenshop</a>
                        </div>
                    </div>

                    <div class="col-md-8" style="text-align: right">
                        <form name="search" id="header-search-form" class="clearfix">
                            <input type="text" name="q" id="text-search-input" placeholder="doorzoek alle kookboeken">
                            <input type="submit" value="zoeken">
                        </form>
                    </div>
                </div>
            </div>
        </header>

        <div class="container">
            {% block categories %}{% endblock %}
            {% block body %}{% endblock %}
        </div>

        <footer>
            <div class="container">

                <div class="row mb-3">
                    <div class="col-md-4">
                        <h4>
                            <a href="{{ path('recipes_list') }}">Recepten</a>
                        </h4>
                        {{ recipes(5)|raw }}
                    </div>
                    <div class="col-md-4">
                        <h4>
                            <a href="{{ path('translation_list') }}">Culinair woordenboek</a>
                        </h4>
                        {{  translations(5)|raw }}
                    </div>
                    <div class="col-md-4">
                        <h4>
                            <a href="{{ path('combination_list') }}">Smaakcombinaties</a>
                        </h4>
                        {{  combinations(5)|raw }}
                    </div>

                </div>
            </div>
        </footer>

        {% block javascripts %}{% endblock %}

        <!-- Optional JavaScript -->
        <!-- jQuery first, then Popper.js, then Bootstrap JS -->
        <script src="https://code.jquery.com/jquery-3.4.1.slim.min.js" integrity="sha384-J6qa4849blE2+poT4WnyKhv5vZF5SrPo0iEjwBvKU7imGFAV0wwj1yYfoRSJoZ+n" crossorigin="anonymous"></script>
        <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>
        <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js" integrity="sha384-wfSDF2E50Y2D1uUdj0O3uMBJnjuUD4Ih7YwaYd1iqfktj0Uod8GCExl3Og8ifwB6" crossorigin="anonymous"></script>
    </body>
</html>
